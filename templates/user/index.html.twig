{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block body %}
	<h1>Liste des utilisateurs</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>
						{% for role in user.roles %}
							{% if role == 'ROLE_ADMIN' %}
								Administrateur
							{% else %}
								Utilisateur
							{% endif %}
						{% endfor %}
					</td>
					<td>
						<a class="btn btn-light" href="{{ path('app_user_show', {'id': user.id}) }}">Consulter</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun utilisateur</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
