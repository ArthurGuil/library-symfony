{% extends 'base.html.twig' %}

{% block title %}Liste des livres
{% endblock %}

{% block body %}
	{% for message in app.flashes('book') %}
		<div class="alert alert-success">{{ message }}</div>
	{% endfor %}
	<h1>Liste des livres</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Auteur</th>
				<th>Résumé</th>
				<th>Stock</th>
				<th>Couverture</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for book in books %}
				<tr>
					<td>{{ book.id }}</td>
					<td>{{ book.name }}</td>
					<td>{{ book.author }}</td>
					<td>{{ book.summary }}</td>
					<td>{{ book.stock }}</td>
					<td>
						{% if book.cover is defined and book.cover is not null %}
							<img src="{{ asset('uploads/images/' ~ book.cover) }}" width="100">
						{% endif %}
					</td>
					<td>
						<a class="btn btn-light" href="{{ path('app_book_show', {'id': book.id}) }}">Afficher</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a class="btn btn-secondary mt-2" href="{{ path('app_book_edit', {'id': book.id}) }}">Modifier</a>
							{{ include('book/_delete_form.html.twig') }}
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">Aucun livre trouvé.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-primary" href="{{ path('app_book_new') }}">Ajouter un livre</a>
	{% endif %}
{% endblock %}
